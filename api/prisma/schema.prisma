generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  username   String   @unique
  password   String
  avatar     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isVerified Boolean  @default(false)
  teams      Team[]   @relation("team_creator")
  token      Token[]
}

model Admin {
  id            String   @id @default(uuid())
  username      String   @unique
  password      String
  role          String   @default("admin")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  games         Game[]   @relation("game_creator")
  approvedTeams Team[]   @relation("approved_teams")
}

model Game {
  id          String   @id @default(uuid())
  category    String
  name        String   @unique
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creatorId   String
  isPublished Boolean  @default(false)
  creator     Admin    @relation("game_creator", fields: [creatorId], references: [id])
}

model Team {
  id                    String   @id @default(uuid())
  name                  String
  numberOfPlayers       Int
  description           String
  availableDaysAndTimes String
  approved              Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  creatorId             String
  approvedById          String?
  category              String
  city                  String
  img                   String
  approvedBy            Admin?   @relation("approved_teams", fields: [approvedById], references: [id])
  creator               User     @relation("team_creator", fields: [creatorId], references: [id])
}

model Token {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String?  @unique
  userId    String?
  expiresAt DateTime
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id])
}
